{
  "name": "bryson-energy-api",
  "version": "1.0.0",
  "description": "Bryson Energy API",
  "main": "dist/app.js",
  "author": "peadarkelly",
  "license": "ISC",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc ",
    "clean": "rimraf dist",
    "lint": "tslint --project tslint.json",
    "migrations": "knex migrate:latest --env migrations --cwd ./dist",
    "start": "npm run migrations && node ./bin/www",
    "test": "npm run lint && npm run test-unit",
    "test-unit": "mocha 'tests/unit/**/*.ts' --require ts-node/register"
  },
  "dependencies": {
    "express": "^4.16.2",
    "helmet": "^3.13.0",
    "inversify": "^4.13.0",
    "knex": "^0.14.6",
    "method-override": "^2.3.10",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/knex": "^0.14.19",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.25",
    "mocha": "^5.0.0",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2",
    "ts-mockito": "^2.3.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
